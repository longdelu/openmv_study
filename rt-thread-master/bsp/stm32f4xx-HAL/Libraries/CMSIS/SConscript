# RT-Thread building script for component
import rtconfig
Import('RTT_ROOT')
from building import *

cwd = GetCurrentDir()
src = Split('''
Device/ST/STM32F4xx/Source/Templates/system_stm32f4xx.c
''')
CPPPATH = [cwd + '/Device/ST/STM32F4xx/Include', cwd + '/Include']

